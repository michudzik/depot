<article>
  <% if notice %>
    <aside id="notice">
      <%= notice %>
    </aside>
  <% end %>

  <h2>Cart</h2>
  <table>
    <tbody>
      <%= render(cart.line_items) %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <td class="price"><%= number_to_pln_currency(cart.total_price) %></td>
      </tr>
    </tfoot>
  </table>
  <%= button_to 'Reset cart', cart, method: :delete, data: { confirm: 'Are you sure?' } %>
</article>
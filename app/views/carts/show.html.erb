<article>
  <% if notice %>
    <aside id="notice">
      <%= notice %>
    </aside>
  <% end %>

  <h2>Cart</h2>
  <table>
    <tbody>
      <% @cart.line_items.each do |line_item| %>
        <tr>
          <td class="quantity"><%= line_item.quantity %></td>
          <td><%= line_item.product.title %></td>
          <td class="price"><%= number_to_pln_currency(line_item.total_price) %></td>
          <td><%= button_to 'Delete item', line_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
    <tfoot>
      <tr>
        <th colspan="2">Total:</th>
        <td class="price"><%= number_to_pln_currency(@cart.total_price) %></td>
      </tr>
    </tfoot>
  </table>
</article>

<%= button_to 'Reset cart', @cart, method: :delete, data: { confirm: 'Are you sure?' } %>
